article.single-content
	section.post-header
		h2 {{content.title}}
		.meta.clearfix
			p.author(title="Usu√°rio")
				a(href="/user/{{content.creator.username}}/") {{content.creator.name}}
			p.layer(ng-show="map", title="Camada")
				a(href="/layers/{{content.layer._id}}/") {{content.layer.title}}
			p.features(ng-show="content.featureObjs.length", title="Features")
				span.feature(ng-repeat="feature in content.featureObjs")
					a(href="{{baseUrl}}/feature/{{feature._id}}", ng-click="focus(feature)") {{feature.title}}
	section.content-body
		div(ng-repeat="block in content.sections")
			div(dynamic="renderBlock(block)")
